<!DOCTYPE html>
<html>

<body>
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<h1>Bookers</h1>
	<table>
		<thead>		
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		</thead>
		<tbody>
			<% @bookers.each do |booker| %>
			<tr>
				<td><%= booker.title %></td>
				<td><%= booker.body %></td>
				<td><%= link_to 'show', book_path(booker) %></td>
				<td><%= link_to 'edit', edit_book_path(booker) %></td>
				<td><%= link_to 'Destroy', book_path(booker.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>


	
		<h2>New Book</h2>
		<% if @newbooker.errors.any? %>
		  <div id="error_explanation" class="alert alert-danger">
		  	
		    <ul>
		    	<li>error</li>
		      <% @newbooker.errors.full_messages.each do |message| %>
		        <li><%= message %></li>		        
		      <% end %>
		    </ul>
		  </div>
		<% end %>
	<%= form_for(@newbooker) do |f| %>
		

		<h4>Title</h4>
		<%= f.text_field :title %>
		<h4>Body</h4>
		<%= f.text_area :body %>

		<%= f.submit 'Create Book' %>	
	<% end %> 	

</body>
</html>